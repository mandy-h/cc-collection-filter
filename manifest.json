{
  "manifest_version": 3,
  "name": "CC Collection Filter",
  "version": "1.0",
  "author": "mandy-h",
  "description": "Adds a form on the collection comparison page to allow advanced filtering.",
  "host_permissions": [
    "https://www.clickcritters.com/compare_collections.php?compareto=*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.clickcritters.com/compare_collections.php?compareto=*"
      ],
      "js": [
        "/scripts/filter.js"
      ],
      "run_at": "document_start"
    }
  ]
}